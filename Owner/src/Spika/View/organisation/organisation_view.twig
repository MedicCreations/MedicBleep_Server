{% extends "adminbase.twig" %}
{% block content %}

<!-- start: PAGE HEADER -->
<div class="row">
	<div class="col-sm-12">
		<!-- start: PAGE TITLE & BREADCRUMB -->
		<ol class="breadcrumb">
			<li>
				<i class="clip-home-3"></i>
				<a href="{{OWNER_ROOT_URL}}/dashboard">
					{{lang.general1}}
				</a>
			</li>
			<li>
				<a href="{{OWNER_ROOT_URL}}/organisation/">
				{{lang.organisation1}}
				</a>
			</li>
			<li class="active">
			    {% if mode == 'view' %}
				    {{lang.organisation9}}
				{% endif %}
			    {% if mode == 'delete' %}
				    {{lang.organisation10}}
				{% endif %}
			</li>
			
		</ol>
		<div class="row page-header">
			<div class="col-md-6">
				<h1>{{data.name}}</h1>
			</div>
		</div>
		<!-- end: PAGE TITLE & BREADCRUMB -->
	</div>
</div>
<!-- end: PAGE HEADER -->

<!-- start: PAGE CONTENT -->
<div class="row">
    
    {% if mode == 'delete' %}
        
        <div class="col-md-12" style="padding-bottom:20px">
    
            <div class="alert alert-warning">
            	<i class="fa fa-exclamation-triangle"></i>
            	<strong>Warning!</strong> 
            	{{lang.organisation11}}
            </div>
            
            <form role="form" class="form-horizontal form-user right" method="post" action="{{OWNER_ROOT_URL}}/organisation/delete/{{data.id}}">
                
                <button type="button" class="btn btn-success" onclick="history.back()">{{lang.general14}}</button>
                <button type="submit" class="btn btn-warning">{{lang.general8}}</button>

            </form>
            
        </div>
        
    {% endif %}
    
    <div class="col-md-9">

        <table class="table table-hover" id="sample-table-1">

    		<tr>
    			<td>{{lang.organisation5}}</td>
    			<td>{{data.name}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.organisation13}}</td>
    			<td>{{data.email}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.organisation14}}</td>
    			<td>{{data.admin_name}}</td>
    		<tr>
    			<td>{{lang.organisation15}}</td>
    			<td>{{data.admin_password}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.organisation16}}</td>
    			<td>
    				{% if data.email_verified == 1 %}{{lang.general15}}{% endif %}
    				{% if data.email_verified == 0 %}{{lang.general16}}<{% endif %}
    			</td>
    		</tr>
    		<tr>
    			<td>{{lang.general12}}</td>
    			<td>{{data.created|date("Y.m.d")}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.general13}}</td>
    			<td>{{data.modified|date("Y.m.d")}}</td>
    		</tr>


        </table>

    </div>

</div>


{% endblock %}
