{% extends "adminbase.twig" %}
{% block content %}

<!-- start: PAGE HEADER -->
<div class="row">
	<div class="col-sm-12">
		<!-- start: PAGE TITLE & BREADCRUMB -->
		<ol class="breadcrumb">
			<li>
				<i class="clip-home-3"></i>
				<a href="{{ADMIN_ROOT_URL}}/dashboard">
				{{lang.category1}}
				</a>
			</li>
			<li>
				<a href="{{ADMIN_ROOT_URL}}/categories">
				{{lang.category2}}
				</a>
			</li>
			</li>
			<li class="active">
			    {% if mode == 'view' %}
				    {{lang.category11}}
				{% endif %}
			    {% if mode == 'delete' %}
				    {{lang.category12}}
				{% endif %}
			</li>
			
			{% include 'searchbox.twig' %}
			
		</ol>
		<div class="row page-header">
			<div class="col-md-6">
				<h1>{{data.name}}</h1>
			</div>
		</div>
		<!-- end: PAGE TITLE & BREADCRUMB -->
	</div>
</div>
<!-- end: PAGE HEADER -->

<!-- start: PAGE CONTENT -->
<div class="row">
    
    {% if mode == 'delete' %}
        
        <div class="col-md-12" style="padding-bottom:20px">
    
            <div class="alert alert-warning">
            	<i class="fa fa-exclamation-triangle"></i>
            	<strong>Warning!</strong> 
            	{{lang.category13}}
            </div>
            
            <form role="form" class="form-horizontal form-user right" method="post" action="{{ADMIN_ROOT_URL}}/categories/delete/{{data.id}}">
                
                <button type="button" class="btn btn-success" onclick="history.back()">{{lang.general9}}</button>
                <button type="submit" class="btn btn-warning">{{lang.category14}}</button>

            </form>
            
        </div>
        
    {% endif %}
    
    <div class="col-md-9">

        <table class="table table-hover" id="sample-table-1">

    		<tr>
    			<td>{{lang.category9}}</td>
    			<td>{{data.name}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.users32}}</td>
    			<td>{{data.created|date("Y.m.d")}}</td>
    		</tr>
    		<tr>
    			<td>{{lang.users33}}</td>
    			<td>{{data.modified|date("Y.m.d")}}</td>
    		</tr>


        </table>

    </div>

</div>


{% endblock %}
