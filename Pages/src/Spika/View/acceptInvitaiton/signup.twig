{% extends "acceptInvitaiton/base.twig" %}

{% block content %}

    <div class="container">
    
        
        <form class="form-signin" method="post" action="{{ROOT_URL}}/accept/signup">
        
            <h2 class="form-signin-heading">{{lang.invitation1}}</h2>
            <p>
                {{lang.invitation2}} <strong>{{organization.name}}</strong><br />
                {{lang.invitation3}}
            </p>
            
            <p> {{lang.invitation5}} <strong>{{userMst.email}}</strong></p>
            
            {% include "alert.twig" %}
            
            <label for="inputEmail" class="sr-only">{{lang.invitation6}}</label>            
            <input type="username" name="username" id="inputEmail" class="form-control" placeholder="Username" autofocus>
            
            <label for="inputPassword" class="sr-only">{{lang.invitation7}}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password">
            
            <label for="inputPassword" class="sr-only">{{lang.invitation8}}</label>
            <input type="password" name="password_again" id="inputPassword" class="form-control" placeholder="Password Again">
            
            <input type="hidden" name="code" value="{{code}}">
            <button class="btn btn-lg btn-primary btn-block" type="submit">{{lang.invitation4}}</button>
            
        </form>

    </div> <!-- /container -->					

{% endblock %}